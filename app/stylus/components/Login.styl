[data-component='Login']{
  width : 100%;
  height :100%;
  position: relative;
  overflow hidden
  >.box{
    width:800px;
    height:500px;
   position: absolute;
   left: 50%; 
   top: 50%;
   transform: translateX(-50%) translateY(-50%);
    background:rgba(255,255,255,1);
    box-shadow:-1px 4px 15px 0px rgba(32,32,32,0.52);
    border-radius:16px;
    >.left{
    float left
    width: 50%;
    height :100%;
    position relative
    >img{
      width: 100%;
      height: 100%;
      position: relative;
      top: 1px;
      left: -1px;
    }>.p1{
      font-size: 2rem;
      color: #fff;
      position: absolute;
      top:45%;
      left:50%;
      transform: translateX(-50%) translateY(-50%);
      font-family:Microsoft YaHei;
      font-weight:bold;
    }
    >.p2{
      width: 100%;
      color: #fff;
      position: absolute;
      top:50%;
      text-align: center;
      font-size: 1.5rem;
      line-height: 2rem
    }

    }
    >.right{
      float left
      height 100%
      width: 50%;
      padding-left: 20px;
      padding-right: 20px
      >.top{
        height 20%
        width: 100%;
        overflow hidden
        position: relative;

        >.welcome{
          margin-top:15%
          font-size:1rem;
          font-family:Microsoft YaHei;
          font-weight:400;
          color:rgba(13,85,199,1);
          line-height:36px;
        }
        >.h1{
          width:70%;
          height:1px;
          background:rgba(1,119,208,0.5);
          border:1px solid rgba(1,119,208,0.5);
          position: absolute;
          top: 70%;
          left:25%;


        }
        >.h2{
          width:55%;
          height:1px;
          background:rgba(1,119,208,0.4);
          border:1px solid rgba(1,119,208,0.4);
          position: absolute;
          top: 75%;
          left:25%;
        }

      }
      >span{
          font-size:2rem;
          font-family:Microsoft YaHei;
          font-weight:bold;
          color:rgba(13,85,199,1);
          line-height:3rem;
          
      }
      >.form{
        margin-top: 50px;
        height 50%
        text-align: center;
        // background-color red
        >div{
          border: 2px solid rgba(1,119,208,0.6)
          width: 90%;
          margin: 0 auto;
          line-height: 3rem
          margin-bottom: 20px;
          border-radius: 10px;
          >span{
              color: rgba(1,119,208,1);
          }
          >input{
            border: 0;
            line-height: 2rem;
            font-size: 1rem;
            color: rgba(1,119,208,1);

          }
        }
        >button{
          width:208px;
          height:54px;
          font-size: 1.3rem;
          line-height: 2rem;
          background:rgba(1,119,208,0.1);
          border:2px solid rgba(1,119,208,1);
          border-radius:28px;
          color:rgba(1,119,208,1);
          margin-top: 20px;
        }
      }
    }
  }


}